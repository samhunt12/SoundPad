<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pad1"
    android:background="@color/black"
    android:padding="10dp"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pad 1"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:textSize="30dp"
        android:textStyle=""
        android:fontFamily="@font/opensans_bold"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:background="@drawable/purple_button"
            android:onClick="bunyi1"
            android:layout_width="110dp"
            android:layout_height="110dp" />
        <Button
            android:layout_marginLeft="5dp"
            android:background="@drawable/purple_button"
            android:onClick="bunyi2"
            android:layout_width="110dp"
            android:layout_height="110dp" />
        <Button
            android:layout_marginLeft="5dp"
            android:background="@drawable/purple_button"
            android:onClick="bunyi3"
            android:layout_width="110dp"
            android:layout_height="110dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:background="@drawable/green_button"
            android:onClick="bunyi4"
            android:layout_width="110dp"
            android:layout_height="110dp" />
        <Button
            android:background="@drawable/orange_button"
            android:layout_marginLeft="5dp"
            android:onClick="bunyi5"
            android:layout_width="110dp"
            android:layout_height="110dp" />
        <Button
            android:background="@drawable/blue_button"
            android:layout_marginLeft="5dp"
            android:onClick="bunyi6"
            android:layout_width="110dp"
            android:layout_height="110dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:background="@drawable/blue_button"
            android:onClick="bunyi7"
            android:layout_width="110dp"
            android:layout_height="110dp" />
        <Button
            android:background="@drawable/blue_button"
            android:layout_marginLeft="5dp"
            android:onClick="bunyi8"
            android:layout_width="110dp"
            android:layout_height="110dp" />
        <Button
            android:background="@drawable/blue_button"
            android:layout_marginLeft="5dp"
            android:onClick="bunyi9"
            android:layout_width="110dp"
            android:layout_height="110dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:background="@drawable/purple_button"
            android:onClick="bunyi10"
            android:layout_width="110dp"
            android:layout_height="110dp" />
        <Button
            android:background="@drawable/pink_button"
            android:layout_marginLeft="5dp"
            android:onClick="bunyi11"
            android:layout_width="110dp"
            android:layout_height="110dp" />
        <Button
            android:background="@drawable/green_button"
            android:layout_marginLeft="5dp"
            android:onClick="bunyi12"
            android:layout_width="110dp"
            android:layout_height="110dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stay Home"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="#SamDev"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

</LinearLayout>